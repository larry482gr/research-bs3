          <a data-clk="hl=en&amp;sa=T&amp;ct=res&amp;cd=0&amp;ei=yiv3VceYCImYjAHzwjk" href="<%= res['identifier'] %>">
            <%= res['title'] %>
          </a>
        </h3>
        <div class="gs_a">
          <%= res['creator'] %> - <%= res['publisher'] %>, <%= res['date'] %> - <%= res['domain'] %>
        </div>
        <div class="gs_rs">
          <%= res['description'].html_safe unless res['description'].nil? %>
