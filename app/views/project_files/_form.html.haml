= form_for @project_file do |f|
  - if @project_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project_file.errors.count, "error")} prohibited this project_file from being saved:"
      %ul
        - @project_file.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :filename
    = f.text_field :filename
  .field
    = f.label :is_basic
    = f.check_box :is_basic
  .actions
    = f.submit 'Save'
