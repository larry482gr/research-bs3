<div class="search_div col-md-10 left-div">
    <form id="search_gs_form" class="col-md-12" onsubmit="return false;">
      <div class="form-group has-success">
        <div class="input-group search_gs col-md-12">
          <input type="text" class="form-control" id="search_gs_input" aria-describedby="search-input" placeholder="<%= t :search_gs %>"
            value="<%= @search_gs unless @search_gs.nil? %>"
          />
          <span class="input-group-addon" id="search_gs_btn">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12" id="exact_match_div">
          <div class="checkbox">
            <label>
              Exact phrase match <input type="checkbox" id="exact_match">
            </label>
          </div>
        </div>
      </div>
    </form>

    <div class="search_gs_results col-md-12"></div>
    <div class="paging paging_bottom col-md-12">
      <div id="paging_gs_results"></div>
      <form>
        <div id="rows_div">
          Rows Per Page: <!-- Add it to translations!!! -->
          <select class="rowsPerPage btn btn-sm btn-default" name="rowsPerPage">
            <option value="10">10</option>
            <option value="20">20</option>
          </select>
        </div>
      </form>
    </div>
</div>